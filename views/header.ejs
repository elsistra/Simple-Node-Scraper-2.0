<head>
  <link rel="stylesheet" type="text/css" href="/public/styles.css">
  <script src="/socket.io/socket.io.js"></script> <!--Include Socket.io real time lib -->
  <script src="../public/client.js"></script>
</head>
<div id='header'>
  <div id='container'>
    <div id='header-logo-div'><a href='/'>SNS2</a></div>
    <!--- If user is logged in--->
    <% if (session.username) { %>
      <div id='header-logo-div2'><a href='/sign-out'>Sign Out</a></div>
    <% }else{ %>
      <div id='header-logo-div2'>
        <div id="login-div">
          <form method="POST" action="/log-in">
            <input name="username" placeholder="username" type="text"/>
            <input name="password" placeholder="password" type="password"/>
            <input value="Login" type="submit"> or <a href='/register'>Register</a>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</div>
